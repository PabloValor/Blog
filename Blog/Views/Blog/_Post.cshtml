@model Blog.Models.PostViewModel
@{
    var post = Model;
}

<div class="post">
    <header style="background-image: url(@post.imageList);">
        <h2>@post.title</h2>
    </header>
    <div class="body">
        <div>
            <span class="category">Categoría: <strong>@post.category.description</strong></span>
            <span class="created">Creado @post.created</span>
            <h2 class="author">Autor <a href="#!">@post.author.name @post.author.surname</a></h2>
        </div>
        <p>@post.shorDescription</p>
        <a href="@Url.Action("Detail", new { id = post.id_post })" class="btn pure-button pure-button-primary">Ver Más &raquo;</a>
    </div>
</div>
